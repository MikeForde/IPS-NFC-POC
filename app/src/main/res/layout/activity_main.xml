<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <!-- Header row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="NATO Patient Summary NFC Tool"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/buttonSettings"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="Settings"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_manage" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:alpha="0.2"
            android:layout_marginBottom="4dp" />

        <!-- IPS WebApp picker (compact row) -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:padding="2dp"
            android:layout_marginBottom="2dp">

            <Spinner
                android:id="@+id/spinnerIps"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/buttonRefreshIps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â†»"
                android:textSize="24sp"
                android:textAllCaps="false"
                android:paddingHorizontal="12dp" />
        </LinearLayout>

        <!-- Status pill -->
        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tap action, then present a DESFire EVx card"
            android:textSize="14sp"
            android:padding="4dp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/white"
            android:layout_marginBottom="6dp" />

        <!-- Primary actions -->

        <!-- Write row -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">

            <Button
                android:id="@+id/buttonWrite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Write DES"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/buttonWriteDualNdef"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Write Dual"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/buttonWriteNato"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Write NDEF"
                android:textAllCaps="false" />
        </LinearLayout>

        <!-- Read row -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/buttonRead"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Read DES"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/buttonReadDual"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Read Dual"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/buttonReadNato"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Read NDEF"
                android:textAllCaps="false" />
        </LinearLayout>

        <!-- RO/RW tabs -->
        <TabHost
            android:id="@android:id/tabhost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp">

                    <!-- RO tab content -->
                    <LinearLayout
                        android:id="@+id/tab_ro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:background="@android:color/white"
                        android:elevation="2dp">

                        <EditText
                            android:id="@+id/textHistoric"
                            android:layout_width="match_parent"
                            android:layout_height="260dp"
                            android:inputType="textMultiLine|textNoSuggestions"
                            android:gravity="top|start"
                            android:overScrollMode="always"
                            android:fadeScrollbars="false"
                            android:scrollbars="vertical"
                            android:padding="8dp"
                            android:hint="Vanilla NFC Readable (read-only)"

                            android:textSize="12sp"
                            android:typeface="monospace"
                            android:lineSpacingExtra="2dp"
                            android:nestedScrollingEnabled="true"
                            android:scrollbarStyle="insideOverlay"/>
                    </LinearLayout>

                    <!-- RW tab content -->
                    <LinearLayout
                        android:id="@+id/tab_rw"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:background="@android:color/white"
                        android:elevation="2dp">

                        <EditText
                            android:id="@+id/textRw"
                            android:layout_width="match_parent"
                            android:layout_height="260dp"
                            android:inputType="textMultiLine|textNoSuggestions"
                            android:gravity="top|start"
                            android:overScrollMode="always"
                            android:scrollbars="vertical"
                            android:fadeScrollbars="false"
                            android:padding="8dp"
                            android:hint="Hidden data (read/write)"

                            android:textSize="12sp"
                            android:typeface="monospace"
                            android:lineSpacingExtra="2dp"
                            android:nestedScrollingEnabled="true"
                            android:scrollbarStyle="insideOverlay"/>
                    </LinearLayout>

                </FrameLayout>
            </LinearLayout>
        </TabHost>


        <!-- Maintenance / Danger zone -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Format Buttons"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginBottom="2dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/buttonFormatApp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="DES"
                android:textAllCaps="false"
                android:textColor="@android:color/holo_red_dark" />

            <Button
                android:id="@+id/buttonFormatForNDEF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dual"
                android:textAllCaps="false"
                android:textColor="@android:color/holo_red_dark" />

            <Button
                android:id="@+id/buttonFormatForNATO"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="NDEF"
                android:textAllCaps="false"
                android:textColor="@android:color/holo_red_dark" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
